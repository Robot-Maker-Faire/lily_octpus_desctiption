<?xml version="1.0"?>
<robot name="lily_octpus" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find lily_octpus_description)/urdf/base/base.urdf.xacro"/>
  <xacro:include filename="$(find lily_octpus_description)/urdf/leg/leg.urdf.xacro"/>
  <xacro:include filename="$(find lily_octpus_description)/urdf/params/robot.xacro"/>
  
  <!--
  <link name="world"/>
  <joint name="fixed" type="fixed">
    <parent link="world"/>
    <child link="base_footprint"/>
  </joint>
  -->

  <!-- ===============  Link & Joint =============== -->
  <!-- Base -->
  <link name="base_footprint"/>
  <xacro:base parent="base_footprint" 
              length="${body_length}" 
              width="${body_width}" 
              height="${body_height}" 
              rho="${body_rho}">
  <!-- respawn point -->
	<origin xyz="0 0 ${body_height+base_clause_radius/2+LF_tibia_length+appendix_radius+0.01}"/>
  </xacro:base>

  <!-- LEG -->
