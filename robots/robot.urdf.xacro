             thigh_radius="${thigh_radius}" thigh_length="${LH_thigh_length}" thigh_rpy="${LH_thigh_rpy}" thigh_rho="${thigh_rho}" thigh_torque="${thigh_torque}" thigh_velocity="${thigh_velocity}"
